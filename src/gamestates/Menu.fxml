<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gamestates.MenuController">
   <children>
      <Text fill="WHITE" text="SPACE SURVIVORS">
         <font>
            <Font name="Arial" size="48.0" />
         </font>
      </Text>
      <Button onAction="#handlePlayButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20;" text="START GAME">
         <font>
            <Font name="Arial" size="24.0" />
         </font>
      </Button>
      <Button onAction="#handleShopButton" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 10 20;" text="SHOP">
         <font>
            <Font name="Arial" size="24.0" />
         </font>
      </Button>
      <Button onAction="#handleResetButton" style="-fx-background-color: #888888; -fx-text-fill: white; -fx-padding: 8 16;" text="RESET DATA">
         <font>
            <Font name="Arial" size="18.0" />
         </font>
      </Button>
   </children>
</VBox>
