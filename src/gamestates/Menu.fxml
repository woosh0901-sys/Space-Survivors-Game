<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="25.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gamestates.MenuController">
   <children>
      <Text fill="WHITE" text="SPACE SURVIVORS">
         <font>
            <Font name="Arial Bold" size="80.0" />
         </font>
      </Text>
      <Button onAction="#handlePlayButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="START GAME">
         <font>
            <Font name="Arial Bold" size="32.0" />
         </font>
         <padding>
            <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
         </padding>
      </Button>
      <Button onAction="#handleShopButton" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="SHOP">
         <font>
            <Font name="Arial Bold" size="32.0" />
         </font>
         <padding>
            <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
         </padding>
      </Button>
      <Button onAction="#handleResetButton" style="-fx-background-color: #888888; -fx-text-fill: white;" text="RESET DATA">
         <font>
            <Font name="Arial" size="20.0" />
         </font>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </Button>
   </children>
</VBox>